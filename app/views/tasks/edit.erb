<h1>Edit Task</h1>
<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<%end%>
<form action="/tasks/<%= @task.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>
    <label for="title">Task Name:</label><br>
    <input type="text" value="<%= @task.title %>" name="title" id="title">
  </p>

  <p>
    <label for="content">Description:</label><br>
    <textarea type="text" value="<%= @task.content %>" name="content" id="content"></textarea>
  </p>

  <input class="btn btn-primary" type="submit" value="Update Task">
  <a href="/tasks/<%= @task.id %>" class="btn btn-secondary">Cancel</a>
</form>